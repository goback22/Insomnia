<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace속성:매퍼파일의 완전한경로 .xml는 생략 -->
<!-- ※ibatis와는 다르게 id값에 .(dot)를 사용 못한다. -->

<mapper namespace="mapper.Zerojin_Comment">
	<select id="commentSelectList" parameterType="java.util.Map" resultType="java.util.Map">
	SELECT m.id,content,name,postdate,r_no FROM BGSREVIEW m JOIN members b ON m.id=b.id order by r_no desc
	</select>
	
	<insert id="commentInsert" parameterType="java.util.Map" >
	insert into BGSREVIEW(r_no,content,postdate,id) values(SEQ_bgsreview.nextval,#{content},default,#{id})
	</insert>
	
	<update id="commentUpdate" parameterType="java.util.Map">
	UPDATE BGSREVIEW SET content=#{content} WHERE r_no =#{r_no}	
	</update>
	
	<delete id="commentDelete" parameterType="java.util.Map">
	DELETE FROM BGSREVIEW WHERE r_no =#{r_no}	
	</delete>
</mapper>