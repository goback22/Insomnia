<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace속성:매퍼파일의 완전한경로 .xml는 생략 -->
<!-- ※ibatis와는 다르게 id값에 .(dot)를 사용 못한다. -->

<mapper namespace="mapper.Zerojin_Comment">
	<select id="commentSelectList" parameterType="java.util.Map" resultType="java.util.Map">
	SELECT m.id,c_content,name,c_post_date,c_no FROM BANDSUBMIT_COMMENT m JOIN members b ON m.id=b.id order by c_no desc
	</select>
	
	<insert id="commentInsert" parameterType="java.util.Map" >
	insert into BANDSUBMIT_COMMENT(c_no,c_content,c_post_date,id) values(seq_memocomment.nextval,#{c_content},default,#{id})
	</insert>
	
	<update id="commentUpdate" parameterType="java.util.Map">
		UPDATE BANDSUBMIT_COMMENT SET c_content=#{c_content} WHERE c_no =#{c_no}	
	</update>
	
	<delete id="commentDelete" parameterType="java.util.Map">
	DELETE BANDSUBMIT_COMMENT WHERE c_no =#{c_no}	
	</delete>
</mapper>